{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TS Node",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      "args": ["--respawn", "--transpile-only", "src/index.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}